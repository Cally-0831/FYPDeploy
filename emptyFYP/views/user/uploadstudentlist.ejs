<script>
  if(document.getElementById('studentupload')!= null){
    document.getElementById('studentupload').addEventListener('change', handlestudentFileSelect, false);
  var allstudentarray = new Array(0);
  }

  if(document.getElementById('supervisorupload') !=  null){
    document.getElementById('supervisorupload').addEventListener('change', handlesupervisorFileSelect, false);
  var allsupervisorarray = new Array(0);
  }
  
  
  document.getElementById('pairupload').addEventListener('change', handlepairFileSelect, false);
  var allpairarray = new Array(0);

  var studentjsonobj;
  var supervisorjsonobj;
  var pairjsonobj;
  var ExcelToJSON = function (role) {

    this.parseExcel = function (file) {
      var reader = new FileReader();

      reader.onload = function (e) {
        var data = e.target.result;
        var workbook = XLSX.read(data, {
          type: 'binary'
        });
        workbook.SheetNames.forEach(function (sheetName) {
          // Here is your object
          var XL_row_object = XLSX.utils.sheet_to_row_object_array(workbook.Sheets[sheetName]);
          var json_object = JSON.stringify(XL_row_object);

          //jsonobj = json_object
          //  console.log("check jsonobj      " + jsonobj);


          if (role == "stu") {
            console.log("check json_object      " + json_object);
            studentjsonobj = json_object;
            console.log("check jsonobj      " + studentjsonobj);
            allstudentarray = JSON.parse(json_object);
            document.getElementById("getliststudentdata").innerHTML = "Total " + allstudentarray.length + " students will be created under your management,\<br\> Click confirm to create."
              + "\<br\>"
              + " \<form  action\=\"\/uploadstudentlist\" method\=\"post\" onsubmit\=\"submitform(this,\'stu\')\;return false\;\"\>"
              + "\<button class=\"buttonlogout\" id\=\"confirm is\-success\"\>Confirm\<\/button\><br>"
              + "\<\/form>";
            jQuery('#studentxlx_json').val(json_object);
          } else if (role == "sup") {
            console.log("here")
            console.log("check json_object      " + json_object);
            supervisorjsonobj = json_object;
            console.log("check jsonobj      " + supervisorjsonobj);
            allsupervisorarray = JSON.parse(json_object);
            document.getElementById("getlistsupervisordata").innerHTML = "Total " + allsupervisorarray.length + " supervisors will be created under your management,\<br\> Click confirm to create."
              + "\<br\>"
              + " \<form  action\=\"\/uploadsupervisorlist\" method\=\"post\" onsubmit\=\"submitform(this,\'sup\')\;return false\;\"\>"
              + "\<button class=\"buttonlogout\" id\=\"confirm is\-success\"\>Confirm\<\/button\><br>"
              + "\<\/form>";
            jQuery('#supervisorxlx_json').val(json_object);
          } else if (role == "pair") {
            console.log("check json_object      " + json_object);
            pairjsonobj = json_object;
            console.log("check jsonobj      " + pairjsonobj);
            allpairarray = JSON.parse(json_object);
            document.getElementById("getlistpairdata").innerHTML = "Total " + allpairarray.length + " pairs,\<br\> Click confirm to create."
              + "\<br\>"
              + " \<form  action\=\"\/uploadpairlist\" method\=\"post\" onsubmit\=\"submitform(this,\'pair\')\;return false\;\"\>"
              + "\<button class=\"buttonlogout\" id\=\"confirm is\-success\"\>Confirm\<\/button\><br>"
              + "\<\/form>";
            jQuery('#pairxlx_json').val(json_object);
          }


        })
      };

      reader.onerror = function (ex) {
        console.log(ex);
      };

      reader.readAsBinaryString(file);
    };
  };

  function handlestudentFileSelect(evt) {

    var files = evt.target.files; // FileList object
    console.log(files[0].name);
    var namestring = (files[0].name).split("\.");
    if (namestring[1] != "xlsx") {
      alert("This is not a .xlsx file, please upload a correct format file");
      return;
    }
    var xl2json = new ExcelToJSON("stu");
    xl2json.parseExcel(files[0]);
  }

  function handlesupervisorFileSelect(evt) {

    var files = evt.target.files; // FileList object
    console.log(files[0].name);
    var namestring = (files[0].name).split("\.");
    if (namestring[1] != "xlsx") {
      alert("This is not a .xlsx file, please upload a correct format file");
      return;
    }
    var xl2json = new ExcelToJSON("sup");
    xl2json.parseExcel(files[0]);
  }

  function handlepairFileSelect(evt) {

    var files = evt.target.files; // FileList object
    console.log(files[0].name);
    var namestring = (files[0].name).split("\.");
    if (namestring[1] != "xlsx") {
      alert("This is not a .xlsx file, please upload a correct format file");
      return;
    }
    var xl2json = new ExcelToJSON("pair");
    xl2json.parseExcel(files[0]);
  }


  async function submitform(formElem, role) {
    var jsonobj;
    try {
      if (role == "stu") {
        jsonobj = studentjsonobj;
      } else if (role == "sup") {
        jsonobj = supervisorjsonobj;
      } else if (role == "pair") {
        jsonobj = pairjsonobj;
      }
      var response = await fetch(formElem.action, {
        method: formElem.method,
        body: jsonobj
      });
      if (response.ok) {
        if (role == "stu") {
          alert("Students are created");
          location.assign("/liststudent");
        } else if (role == "sup") {
          alert("supervisors are created");
          location.assign("/liststudent");
        } else if (role == "pair") {
          alert("pairs are created");
          location.assign("/liststudent");
        }



      } else if (response.status == 401) {
        var msg = await response.json();
        alert(msg);
      } else {
        alert(response.statusTest);
      }


    } catch (err) {
      console.log("Things happened here");
    }

  }
</script>